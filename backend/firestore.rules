// LegalMind Firestore Security Rules
// Development: Allow authenticated users and service-to-service communication
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow all reads and writes for development
    // In production, replace with more restrictive rules
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Alternative: More restrictive rules for authenticated users only
    // Uncomment to use instead of the above rule
