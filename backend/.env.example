# =============================================================================
# LegalMind Configuration
# Google Cloud / Gemini API Settings
# =============================================================================

# -----------------------------------------------------------------------------
# Gemini API Configuration
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here

# Model configuration (Gemini 2.0 Flash recommended for hackathon)
GEMINI_MODEL=gemini-2.0-flash
# Alternative: gemini-1.5-pro for more complex reasoning

# -----------------------------------------------------------------------------
# Google Cloud Project Configuration
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# -----------------------------------------------------------------------------
# Firestore Configuration
# -----------------------------------------------------------------------------
FIRESTORE_DATABASE=(default)

# -----------------------------------------------------------------------------
# Cloud Storage Configuration
# -----------------------------------------------------------------------------
GCS_BUCKET_NAME=legalmind-contracts
GCS_CONTRACTS_FOLDER=contracts
GCS_DOCUMENTS_FOLDER=generated-documents

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=LegalMind
APP_ENV=development
DEBUG=true

# Security Settings
# Leave API_SECRET_KEY empty in local dev to disable auth
API_SECRET_KEY=
# Comma-separated list of allowed origins for CORS (used in production)
ALLOWED_ORIGINS=http://localhost:3000

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_TOKENS_PER_REQUEST=8192

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SEARCH_GROUNDING=true
ENABLE_THINKING_LOGS=true
ENABLE_CITATIONS=true

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=LegalMind
